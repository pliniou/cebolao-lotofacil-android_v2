<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo base para widgets, sem padding extra -->
    <style name="Widget.Cebolao" parent="android:Widget">
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Título principal do widget -->
    <style name="Widget.Cebolao.Title" parent="Widget.Cebolao">
        <item name="android:textSize">@dimen/widget_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/widget_text_primary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Widget.Cebolao.Title.Small" parent="Widget.Cebolao.Title">
        <item name="android:textSize">@dimen/widget_title_size_small</item>
    </style>
    <style name="Widget.Cebolao.Title.Large" parent="Widget.Cebolao.Title">
        <item name="android:textSize">@dimen/widget_title_size_large</item>
    </style>

    <!-- Texto secundário -->
    <style name="Widget.Cebolao.Text.Secondary" parent="Widget.Cebolao">
        <item name="android:textSize">@dimen/widget_subtitle_size</item>
        <item name="android:textColor">@color/widget_text_secondary</item>
    </style>
    <style name="Widget.Cebolao.Text.Secondary.Small" parent="Widget.Cebolao.Text.Secondary">
        <item name="android:textSize">@dimen/widget_subtitle_size_small</item>
    </style>
    <style name="Widget.Cebolao.Text.Secondary.Large" parent="Widget.Cebolao.Text.Secondary">
        <item name="android:textSize">@dimen/widget_subtitle_size_large</item>
    </style>

    <!-- Destaque de prêmio -->
    <style name="Widget.Cebolao.Text.Highlight" parent="Widget.Cebolao">
        <item name="android:textSize">@dimen/widget_prize_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/brand_primary</item>
    </style>
    <style name="Widget.Cebolao.Text.Highlight.Small" parent="Widget.Cebolao.Text.Highlight">
        <item name="android:textSize">@dimen/widget_prize_size_small</item>
    </style>
    <style name="Widget.Cebolao.Text.Highlight.Large" parent="Widget.Cebolao.Text.Highlight">
        <item name="android:textSize">@dimen/widget_prize_size_large</item>
    </style>

    <!-- Texto da bola do jogo -->
    <style name="Widget.Cebolao.BallText" parent="Widget.Cebolao">
        <item name="android:textSize">@dimen/widget_ball_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ball_text_selected</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>
    <style name="Widget.Cebolao.BallText.Small" parent="Widget.Cebolao.BallText">
        <item name="android:textSize">@dimen/widget_ball_text_size_small</item>
    </style>
    <style name="Widget.Cebolao.BallText.Large" parent="Widget.Cebolao.BallText">
        <item name="android:textSize">@dimen/widget_ball_text_size_large</item>
    </style>
</resources>